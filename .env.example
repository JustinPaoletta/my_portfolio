# ========================================
# Environment Configuration Example
# ========================================
# Copy this file to .env.local and fill in your actual values
# See docs/ENV.md for detailed documentation

# ----------------------------------------
# App Configuration (Required)
# ----------------------------------------
VITE_APP_TITLE=My Portfolio
VITE_APP_DESCRIPTION=Welcome to my portfolio showcasing my projects and skills

# ----------------------------------------
# API Configuration (Required)
# ----------------------------------------
VITE_API_URL=https://api.example.com
VITE_API_TIMEOUT=5000

# ----------------------------------------
# Feature Flags (Optional)
# ----------------------------------------
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=false

# ----------------------------------------
# Analytics (Optional)
# ----------------------------------------
# Umami Analytics
VITE_UMAMI_WEBSITE_ID=
VITE_UMAMI_SRC=https://cloud.umami.is/script.js

# Google Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=

# ----------------------------------------
# Error Tracking (Optional)
# ----------------------------------------
# Sentry DSN
VITE_SENTRY_DSN=

# ----------------------------------------
# Social Links (Required)
# ----------------------------------------
VITE_GITHUB_URL=https://github.com/yourusername
VITE_LINKEDIN_URL=https://linkedin.com/in/yourusername
VITE_EMAIL=your.email@example.com

# ----------------------------------------
# Third-Party Services (Optional)
# ----------------------------------------
VITE_MAPBOX_TOKEN=
